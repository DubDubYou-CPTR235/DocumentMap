<% content_for :head do %>
  <title>DocumentMap</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
<% end %>

<h3>VIEW DOCUMENT</h3>
<p>
<% if user_signed_in? and @document.user_id == current_user.id %>
 <%= link_to('EDIT', '/edit_document/' + params[:id].to_s)  %>
<% else %>
<% end %>
<p>Name:</p>
<div class="data"><p><%= @document.name %></p></div>
<p>Description:</p>
<div class="data"><p><%= @document.description %></p></div>
<p>Upload Date:</p>
<div class="data"><p><%= @document.upload_date.to_date %></p></div>
<p>Address:</p>
<div class="data"><p><%= @document.address %></p></div>
<p>Latitude:</p>
<div class="data"><p><%= @document.lat %></p></div>
<p>Longitude:</p>
<div class="data"><p><%= @document.lng %></p></div>
<p>Upload:</p>
<div class="data"><p><a href="<%= @document.upload %>"><%= @document.upload_file_name %></a></p></div>
