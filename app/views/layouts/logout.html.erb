<html>
<head>
  <%= yield :head %>
</head>
<body>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<div class="header">
  <% if user_signed_in? %>
    <%= link_to('Map', '/') %> |
    <%= link_to('My Documents', '/my_documents') %> |
    <%= link_to('Add Document', '/add_document') %> |
    <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
  <% else %>
